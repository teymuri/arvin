define v1
  voice rest 4
    note "g4" "q"
    note "g4" "q."
    note "a4" "e"
    barline
    note "b4" "q"
    note "b4" "q"
    note "c5" "q"
    note "b4" "q"
    note "a4" "h."
    rest "q"
define v2
  voice note "d4" "h"
    note "d4" "q"
    note "g4" "q"
    note "g4" "q"
    note "g4" "q"
    note "g4" "e"
    note "a4" "e"
    note "g4" "q"
    note "f#4" "h."
